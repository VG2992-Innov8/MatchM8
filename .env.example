# ---- Server ----
PORT=3000
# Comma-separated list of allowed origins for CORS.
# Example: http://localhost:3000,https://yourdomain.com
CORS_ORIGIN=http://localhost:3000

# Admin header auth for /api/admin/*
ADMIN_TOKEN=change-me-please

# ---- Licensing ----
# Public key (base64, 32 bytes) generated by tools/license-gen.js gen-keys
LICENSE_PUBKEY_B64=PASTE_PUBLIC_KEY_BASE64

# ---- Email (reminders) ----
# Leave SMTP_HOST empty to disable email reminders.
SMTP_HOST=
SMTP_PORT=587
# "true" for SMTPS/465, "false" for STARTTLS on 587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM="MatchM8 <no-reply@matchm8.local>"

# Self-registration (Home page)
ALLOW_SELF_SIGNUP=true
# Optional: require a shared invite code to sign up (leave blank to disable)
INVITE_CODE=
# Optional: restrict signup emails to a single domain (e.g. club.com)
WHITELIST_EMAIL_DOMAIN=


# ---- Supabase backups (nightly) ----
# Leave SUPABASE_URL empty to disable backups.
SUPABASE_URL=
SUPABASE_SERVICE_ROLE=
SUPABASE_BUCKET=matchm8-backups
